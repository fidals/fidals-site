      link(rel="mask-icon", href="/images/safari-pinned-tab.svg", color="#5bbad5")
      link(rel="shortcut icon", href="/images/favicon.ico")
      meta(name="msapplication-TileColor", content="#ffffff")
      meta(name="msapplication-TileImage", content="/images/mstile-144x144.png")
      meta(name="msapplication-config", content="/images/browserconfig.xml")
      meta(name="theme-color", content="#ffffff")
      title #{title}
      meta(name='description', content='')
      meta(name='viewport', content='width=device-width, initial-scale=1')

    block styles
      link(href='https://fonts.googleapis.com/css?family=Open+Sans&subset=latin,cyrillic', rel='stylesheet', type='text/css')
      link(rel='stylesheet', href='/css/styles.min.css')

  body(class="#{bodyClass}")
    .page-wrapper
      .header#header
        block header
          .container.header-container
            a(class="header-toggle-menu", href="#menu")
            nav#menu(style="display: none")
              ul
                each val, key in menuItems
                  li
                    if key === selectedLink
                      a.active(href=val)= key
                    else
                      a(href=val)= key
            a(class="header-logo-link", href="/", rel="nofollow")
              img(class="img-responsive" src="/images/logo.jpg" alt="FidAls" title="На главную")
            ul.header-nav.list-unstyled
              each val, key in menuItems
                li.header-nav-item
                  if key === selectedLink
                    a.header-nav-link.active(href=val)= key
                  else
                    a.header-nav-link(href=val)= key
            .header-contacts
              p.header-contacts-item.header-contacts-phone
                i(class="fa fa-phone")
                a(class="header-contacts-link" href="tel:+79216304357") +7 (921) 630-43-57
              p.header-contacts-item.header-contacts-email
                i(class="fa fa-envelope")
                a(class="header-contacts-link" href="mailto:info@fidals.com") info@fidals.com

      .content
        block content

