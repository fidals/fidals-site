block vars
  - var title = "Разработка | Фидалс";
  - var bodyClass = "";
  - var selectedLink = 'Главная';

block menuItems
  -
    var menuItems = {
      'Главная'  : '/',
      'Блог'     : '/pages/blog.html',
      'Команда'  : '/pages/team.html',
      'Проекты'  : '/pages/projects.html',
      'Контакты' : '/pages/contacts.html'
    }

doctype html
html
  head
    block meta
